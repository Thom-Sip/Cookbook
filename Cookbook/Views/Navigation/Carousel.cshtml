@model IEnumerable<Cookbook.Models.CarouselSlide>

@if (Model.Count() > 0)
{
    <div id="carouselContainer">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <a href="@Model.First().Url" , title="@Model.First().Title">
                        <img class="d-block w-100" src="@Cookbook.Helpers.SiteHelper.GetImageUrlFromHtmlString(@Model.First().Image)" alt="@Model.First().Title" />
                    </a>
                </div>


                @foreach (var item in Model.Skip(1))
                {
                    <div class="carousel-item">
                        <a href="@item.Url" , title="@item.Title">
                            <img class="d-block w-100" src="@Cookbook.Helpers.SiteHelper.GetImageUrlFromHtmlString(item.Image)" alt="@Model.First().Title" />
                        </a>
                    </div>
                }

            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}